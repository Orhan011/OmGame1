{% extends "layout.html" %}

{% block content %}
<div class="container language-learning-container">
  <div class="page-title-section">
    <div class="duolingo-header">
      <div class="duo-owl-container">
        <svg class="duo-owl" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
          <circle cx="100" cy="100" r="90" fill="#58cc02" />
          <circle cx="65" cy="80" r="25" fill="white" />
          <circle cx="135" cy="80" r="25" fill="white" />
          <circle cx="65" cy="80" r="15" fill="#1cb0f6" />
          <circle cx="135" cy="80" r="15" fill="#1cb0f6" />
          <circle cx="65" cy="75" r="7" fill="white" />
          <circle cx="135" cy="75" r="7" fill="white" />
          <ellipse cx="100" cy="130" rx="30" ry="20" fill="#fed5b2" />
          <path d="M80,110 Q100,130 120,110" stroke="#784918" stroke-width="5" fill="none" />
        </svg>
      </div>
      <div class="header-text">
        <h1>Dil Ustası</h1>
        <p>Eğlenceli ve ücretsiz dil öğrenme deneyimi</p>
      </div>
      <div class="header-actions">
        <div class="xp-badge">
          <i class="fas fa-star"></i>
          <span>15 XP</span>
        </div>
        <div class="level-badge">
          <i class="fas fa-crown"></i>
          <span>Seviye 1</span>
        </div>
      </div>
    </div>
  </div>

  <div class="language-selection">
    <h2>Öğrenmek İstediğiniz Dili Seçin</h2>
    <div class="language-flags">
      {% for language in languages %}
      <div class="language-option {% if loop.first %}active{% endif %}" data-lang="{{ language.code }}">
        <div class="flag-container">
          <img src="https://flagcdn.com/w80/{{ language.flag }}.png" alt="{{ language.name }} bayrağı">
        </div>
        <span class="language-name">{{ language.name }}</span>
      </div>
      {% endfor %}
    </div>
  </div>

  <div class="lessons-section">
    <h2>Dersler</h2>
    <div class="lesson-progress-container">
      <div class="level-progress">
        <div class="level-indicator">Seviye 1</div>
        <div class="progress-bar">
          <div class="progress-fill" style="width: 15%;"></div>
        </div>
        <div class="xp-indicator">15 XP / 100 XP</div>
      </div>
    </div>

    <div class="lessons-grid">
      {% for lesson in lessons %}
      <div class="lesson-card" data-lesson-id="{{ lesson.id }}">
        <div class="lesson-icon">
          {% if lesson.id == 1 %}
          <i class="fas fa-comment"></i>
          {% elif lesson.id == 2 %}
          <i class="fas fa-handshake"></i>
          {% elif lesson.id == 3 %}
          <i class="fas fa-utensils"></i>
          {% elif lesson.id == 4 %}
          <i class="fas fa-plane"></i>
          {% elif lesson.id == 5 %}
          <i class="fas fa-shopping-bag"></i>
          {% else %}
          <i class="fas fa-book"></i>
          {% endif %}
        </div>
        <div class="lesson-info">
          <h3>{{ lesson.title }}</h3>
          <p>{{ lesson.description }}</p>
          <div class="lesson-meta">
            <span class="difficulty-badge 
              {% if lesson.difficulty == 'Kolay' %}easy{% elif lesson.difficulty == 'Orta' %}medium{% else %}hard{% endif %}">
              {{ lesson.difficulty }}
            </span>
            <div class="lesson-progress">
              <div class="progress-bar">
                <div class="progress-fill" style="width: {{ lesson.progress }}%;"></div>
              </div>
              <span class="progress-text">{{ lesson.progress }}%</span>
            </div>
          </div>
        </div>
        <a href="/language-lesson/{{ lesson.id }}?lang=en" class="lesson-btn">Başla</a>
      </div>
      {% endfor %}
    </div>
  </div>

  <div class="daily-goals">
    <h2>Günlük Hedefler</h2>
    <div class="goals-container">
      <div class="goal-item">
        <div class="goal-icon"><i class="fas fa-fire"></i></div>
        <div class="goal-info">
          <h3>3 Gün Serisi</h3>
          <p>Her gün bir ders tamamlayarak serinizi uzatın!</p>
          <div class="streak-progress">
            <div class="streak-day complete"><i class="fas fa-check"></i></div>
            <div class="streak-day complete"><i class="fas fa-check"></i></div>
            <div class="streak-day active">Bugün</div>
            <div class="streak-day">-</div>
            <div class="streak-day">-</div>
          </div>
        </div>
      </div>

      <div class="goal-item">
        <div class="goal-icon"><i class="fas fa-trophy"></i></div>
        <div class="goal-info">
          <h3>Günlük XP</h3>
          <p>Bugün 50 XP kazanmaya çalışın!</p>
          <div class="progress-bar xp-bar">
            <div class="progress-fill" style="width: 30%;"></div>
          </div>
          <span class="xp-text">15 XP / 50 XP</span>
        </div>
      </div>
    </div>
  </div>

  <div class="back-section">
    <a href="{{ url_for('education_games') }}" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Eğitim Oyunlarına Dön
    </a>
  </div>
</div>
{% endblock %}

{% block scripts %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Dil seçimi için event listener
    const languageOptions = document.querySelectorAll('.language-option');
    
    languageOptions.forEach(option => {
      option.addEventListener('click', function() {
        // Önceki aktif seçeneği sıfırla
        const activeOption = document.querySelector('.language-option.active');
        if (activeOption) {
          activeOption.classList.remove('active');
        }
        // Yeni seçeneği aktif et
        this.classList.add('active');
        
        // Seçilen dili al
        const selectedLang = this.getAttribute('data-lang');
        
        // Ders linklerini güncelle
        document.querySelectorAll('.lesson-btn').forEach(btn => {
          const url = btn.href.split('?')[0];
          btn.href = `${url}?lang=${selectedLang}`;
        });
        
        // Konsolda bilgilendirme
        console.log(`Dil seçildi: ${selectedLang}`);
      });
    });
    
    // Ders kartlarına tıklama işlemi
    const lessonCards = document.querySelectorAll('.lesson-card');
    
    lessonCards.forEach(card => {
      card.addEventListener('click', function(e) {
        // Eğer tıklanan buton değilse, buton linkine yönlendir
        if (!e.target.classList.contains('lesson-btn')) {
          const lessonBtn = this.querySelector('.lesson-btn');
          if (lessonBtn) {
            window.location.href = lessonBtn.href;
          }
        }
      });
    });
  });
</script>
{% endblock %}

